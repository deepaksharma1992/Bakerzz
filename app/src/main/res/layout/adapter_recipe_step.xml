<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_sl_no"
            android:layout_width="@dimen/circle_param"
            android:layout_height="@dimen/circle_param"
            android:layout_margin="@dimen/_10dp"
            android:background="@drawable/oval_drawable"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sl_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_step_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="2"
            android:textSize="@dimen/steps_list_text" />

    </LinearLayout>
</android.support.v7.widget.CardView>